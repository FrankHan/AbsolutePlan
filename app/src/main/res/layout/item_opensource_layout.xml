<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg_normal"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/item_opensource_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_opensource_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingEnd="5dp"
            android:paddingStart="9dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/item_opensource_author"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/item_opensource_name"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_opensource_name"
            android:gravity="center_vertical|end"
            android:paddingEnd="9dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />


        <TextView
            android:id="@+id/item_opensource_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_opensource_name"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="3"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:textColor="@color/black"
            android:paddingBottom="9dp"
            android:textSize="@dimen/text_size_13" />
    </RelativeLayout>

</android.support.v7.widget.CardView>