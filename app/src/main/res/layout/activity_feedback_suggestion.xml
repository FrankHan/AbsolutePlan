<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feedback_suggestion_activity_bg_color"
    android:fitsSystemWindows="true"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:id="@+id/qq_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/item_feedback_suggestion_bg_selector">

        <ImageView
            android:id="@+id/qq_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_qq" />

        <View
            android:id="@+id/qq_divide"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/qq_image"
            android:background="@color/black_50" />

        <TextView
            android:id="@+id/qq_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/qq_divide"
            android:gravity="center"
            android:text="1797856713 (点击复制)"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/qq_relativelayout"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_feedback_suggestion_bg_selector">

        <ImageView
            android:id="@+id/email_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_email" />

        <View
            android:id="@+id/email_divide"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/email_image"
            android:background="@color/black_50" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/email_divide"
            android:gravity="center"
            android:text="woodsho@163.com (点击跳转邮箱)"
            android:textColor="@color/black" />
    </RelativeLayout>


</RelativeLayout>