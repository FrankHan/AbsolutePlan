<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/button_item_float_action_menu_width">

    <TextView
        android:id="@+id/text_item_save_float_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:text="保存"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_item_save_float_action_menu"
        android:layout_width="@dimen/button_item_float_action_menu_width"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/text_item_save_float_action_menu"
        android:src="@drawable/ic_fab_save"
        app:borderWidth="0dp"
        app:elevation="3dp"
        app:fabSize="normal"
        android:scaleType="center"
        app:rippleColor="@color/fab_rippleColor" />

</RelativeLayout>