<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@color/colorPrimary"
    android:elevation="5dp"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar_one"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/back_plantaskdetails"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/head_plantaskdetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/back_plantaskdetails"
                android:gravity="center_vertical"
                android:text="新建计划"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/time_plantaskdetails"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/date_plantaskdetails"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="9dp"
                android:layout_toStartOf="@id/time_plantaskdetails"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toolbar_second"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/toolbar_one">

            <ImageView
                android:id="@+id/save_plantaskdetails"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/common_item_bg_selector"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_save_plantaskdetails" />

            <ImageView
                android:id="@+id/share_plantaskdetails"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/save_plantaskdetails"
                android:background="@drawable/common_item_bg_selector"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_share_plantaskdetails" />

            <ImageView
                android:id="@+id/list_plantaskdetails"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/share_plantaskdetails"
                android:background="@drawable/common_item_bg_selector"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_list_plantaskdetails" />

            <ImageView
                android:id="@+id/list_123_plantaskdetails"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_toStartOf="@id/list_plantaskdetails"
                android:background="@drawable/common_item_bg_selector"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_list_123_plantaskdetails" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>