<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.woodsho.absoluteplan">

    <application
        android:name=".AbsolutePlanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name=".database.AbsolutePlanProvider"
            android:authorities="com.woodsho.absoluteplan"
            android:exported="false" />

        <service android:name=".service.UserActionService"
            android:enabled="true"
            android:exported="false"/>
        
        <activity android:name=".ui.PlanTaskDetailsActivity"/>
    </application>

</manifest>