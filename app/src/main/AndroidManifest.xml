<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.woodsho.absoluteplan">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AbsolutePlanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name=".database.AbsolutePlanProvider"
            android:authorities="com.woodsho.absoluteplan"
            android:exported="false" />

        <service
            android:name=".service.UserActionService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ui.PlanTaskDetailsActivity"
            android:theme="@style/Theme.Slidr.Slidable"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".ui.SettingsActivity"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity
            android:name=".ui.FeedbackSuggestionActivity"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity
            android:name=".ui.AboutActivity"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity
            android:name=".ui.OpenSourceActivity"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity
            android:name=".ui.SkinActivity"
            android:theme="@style/Theme.Slidr.Slidable" />

        <activity
            android:name=".ui.AvatarActivity"
            android:theme="@style/Theme.Slidr.Slidable" />

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
    </application>

</manifest>